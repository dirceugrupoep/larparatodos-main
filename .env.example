# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=larparatodos
DB_USER=postgres
DB_PASSWORD=your_strong_password_here

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# App Domain
DOMAIN=larparatodoshabitacional.com.br

# Frontend URL (usado internamente)
FRONTEND_URL=https://larparatodoshabitacional.com.br

# API URL para o frontend
# Em desenvolvimento: http://localhost:3000
# Em produção: https://larparatodoshabitacional.com.br/api (via proxy)
VITE_API_URL=https://larparatodoshabitacional.com.br/api

# Ciabra Invoice API
# Chave Pública = CIABRA_CLIENT_ID
# Chave Secreta = CIABRA_CLIENT_SECRET
CIABRA_API_URL=https://api.ciabra.com.br
CIABRA_CLIENT_ID=your_ciabra_client_id
CIABRA_CLIENT_SECRET=your_ciabra_client_secret

# S3/MinIO Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=associations
S3_REGION=us-east-1
S3_USE_SSL=false
S3_PUBLIC_URL=https://larparatodoshabitacional.com.br/storage

# Server
PORT=3000
NODE_ENV=production
